<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Hello, world!</title>

  </head>
  <body>
    <%- include('nav.html') %>

    <div class="container">
      <form action="/update?_method=put" method="post">
        <div class="mb-3">
          <input name="id" value="<%= post._id %>" style="display: none;">
          <label class="form-label">할 일</label>
          <input id="title" type="text" class="form-control" name="title" value="<%= post.제목 %>">
          <div id="emailHelp" class="form-text">Write.</div>
        </div>
        <div class="mb-3">
          <label class="form-label">Due date</label>
          <input type="text" class="form-control" name="date" value="<%= post.날짜 %>">
        </div>
        <button type="submit" class="update btn btn-danger">Edit</button>
      </form>   
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>